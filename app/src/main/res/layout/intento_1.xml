<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dptoredes.robalino_leccion_1.intento_1">

    <TextView
        android:id="@+id/player1"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_below="@+id/player1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="incorrectbtn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="incorrectbtn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="incorrectbtn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="incorrectbtn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="5"
            android:onClick="correctbtn"/>

        <TextView
            android:id="@+id/txtTarea1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task1"
            android:paddingTop="25sp"
            android:textAlignment="center"
            android:textSize="25sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contbtn"
        android:visibility="invisible"
        android:onClick="pnt2"
        />

</RelativeLayout>
