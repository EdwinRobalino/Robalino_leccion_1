<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dptoredes.robalino_leccion_1.intento_2">


    <TextView
        android:id="@+id/player2"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_below="@+id/player2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="incorrectbtn"
            android:text="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="correctbtn"
            android:text="2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="incorrectbtn"
            android:text="3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="incorrectbtn"
            android:text="4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="incorrectbtn"
            android:text="5"/>

        <TextView
            android:id="@+id/txtTarea2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task2"
            android:paddingTop="25sp"
            android:textAlignment="center"
            android:textSize="25sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnFinish"
        android:onClick="finishIt"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finbtn"
        android:visibility="invisible"
        />

</RelativeLayout>
